<div class="banner" style="background-size:cover; background-position:center; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.attached? ? (cl_image_path @list.photo.key,crop: :fill) : (image_path 'https://res.cloudinary.com/dfjkxrkvj/image/upload/v1676612042/felix-mooneeram-evlkOfkQ5rE-unsplash_n4xbm7.jpg')%>)">
  <div class="container d-flex justify-content-center align-items-center" style="height:500px">
    <h3 style="color: white; text-shadow: 2px 2px 2px black"><%= @list.name %></h3>
  </div>
</div>
<div class="d-flex mt-3 container-fluid">
  <div class="d-flex flex-column">
    <%= link_to "Add", new_list_bookmark_path(@list), class: 'btn btn-primary rounded', style:"position:sticky;top:10px"%>
    <%= link_to "Home", root_path, class: "btn btn-primary mt-3 rounded", style:"position:sticky;top:50px" %>
  </div>
  <div class="container d-flex flex-column">
    <div class="container mt-3">
      <div class="row flex-grow justify-content-center justify-content-md-start justify-content-lg-start justify-content-sm-start">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="card pt-3 col-sm-6  col-md-4 col-lg-3 rounded shadow">
            <%= image_tag "#{bookmark.movie.poster_url}", alt: 'Movie image', class:"card-img-top"%>
            <div class="card-body">
              <h5>
                <%= bookmark.movie.title %>
              </h5>
              <p><%= bookmark.comment %></p>
              <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
