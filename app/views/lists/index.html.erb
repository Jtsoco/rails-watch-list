<%= image_tag "movie_banner.jpg", style: 'height:400px;width:100%;object-fit:cover',alt: "movie banner", class: 'w-100' %>
<div class="d-flex mt-3 container-fluid">
  <div class="d-flex flex-column">
    <%= link_to "New List", new_list_path, class: "btn btn-primary rounded", style:"position:sticky;top:10px" %>
    <%= link_to "Home", root_path, class: "btn btn-primary mt-3 rounded", style:"position:sticky;top:80px" %>
  </div>
  <div class="container mt-3">
    <div class="row flex-grow g-3">
      <% @lists.each do |list| %>
        <div class="card pt-2 pb-2 col-md-4 mt-3 shadow-lg rounded" >
          <% if list.photo.attached? %>
            <%= cl_image_tag list.photo.key,height: 250,style: 'width:100%;object-fit:cover', crop: :fill, alt: "Image for #{list.name}" %>
          <% else %>
            <%= image_tag 'https://res.cloudinary.com/dfjkxrkvj/image/upload/v1676612042/felix-mooneeram-evlkOfkQ5rE-unsplash_n4xbm7.jpg',height:250, style: 'width:100%;object-fit:cover', crop: :fill, alt: "Image for #{list.name}" %>
          <% end %>
          <div class="card-img-overlay d-flex flex-column align-items-center justify-content-center">
            <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
              <h3 style="color: white; text-shadow: 2px 2px 2px black"><%= list.name %></h3>
            </div>
          </div>
          <%= link_to '', list_path(list), class: 'card-trip-link' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
